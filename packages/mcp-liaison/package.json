{
  "name": "@liaison-hub/mcp-liaison",
  "version": "0.0.1",
  "description": "MCP server for delegating long-running jobs to sub-agents with streaming check-ins",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-liaison": "./dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "!dist/**/__tests__",
    "!dist/**/*.test.*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "compile": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "agent",
    "delegation",
    "streaming",
    "task-management",
    "async",
    "typescript"
  ],
  "author": "Dave Parslow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daveparslow/liaison-hub.git",
    "directory": "packages/mcp-liaison"
  },
  "bugs": {
    "url": "https://github.com/daveparslow/liaison-hub/issues"
  },
  "homepage": "https://github.com/daveparslow/liaison-hub#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "globals": "^16.5.0",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.46.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20"
  }
}
